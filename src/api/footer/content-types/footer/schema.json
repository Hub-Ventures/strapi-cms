{
  "kind": "collectionType",
  "collectionName": "footers",
  "info": {
    "singularName": "footer",
    "pluralName": "footers",
    "displayName": "Footer",
    "description": "Reusable footer configurations shared across pages"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": false
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "copyright": {
      "type": "string",
      "maxLength": 200
    },
    "columns": {
      "type": "component",
      "repeatable": true,
      "component": "shared.footer-column"
    },
    "social_facebook": {
      "type": "string",
      "maxLength": 255
    },
    "social_instagram": {
      "type": "string",
      "maxLength": 255
    },
    "social_twitter": {
      "type": "string",
      "maxLength": 255
    },
    "social_linkedin": {
      "type": "string",
      "maxLength": 255
    },
    "variant": {
      "type": "enumeration",
      "enum": ["simple", "columns", "minimal"],
      "default": "simple"
    }
  }
}
