{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "Structured SEO metadata for pages"
  },
  "attributes": {
    "meta_title": {
      "type": "string",
      "maxLength": 120
    },
    "meta_description": {
      "type": "text",
      "maxLength": 320
    },
    "og_image": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "canonical_url": {
      "type": "string",
      "maxLength": 500
    },
    "no_index": {
      "type": "boolean",
      "default": false
    }
  }
}
